import urllib2,urllib
import re,os

for page in xrange(2,26):
    os.makedirs(r'E:\\code\\gif%s\\' % page)
    req=urllib2.Request('https://bbs.hupu.com/16308715-%s.html' % page)
    html=urllib2.urlopen(req).read()
    gif=re.compile(r'''https://i\w+.hoopchina.com.cn/.+?gif''')
    list(set(re.findall(gif,html)))
    i = 1
    for links in list(set(re.findall(gif,html))):
        print i,
        urllib.urlretrieve(links,'E:\code\gif%s\%s.gif' % (page,i))
        i+=1
    print
